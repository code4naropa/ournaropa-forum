<div class="container">
  <h1>Login</h1>

  <div class="row">
    <%= form_tag attempt_login_path, class: "col s12" do %>

      <% if @login_failed %>
        <p><strong>Sign in failed: Please check your email and password</strong></p>
        <script>Materialize.toast("Sign in failed: Please check your email and password", 5000)</script>
      <% end %>

      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">mail</i>
          <%= text_field_tag :email, params[:email] %>
          <%= label_tag :email %>
        </div>
      </div>
    
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">vpn_key</i>
          <%= password_field_tag :password %>
          <%= label_tag :password %>
        </div>
      </div>
      
    <div class="row">
      <div class="col s12 right-align">
        <button class="btn-large waves-effect waves-light" type="submit" name="action">
          <i class="material-icons right">httpsy</i> Log In
        </button>
      </div>
    </div>
    

    <% end %>
  </div>
</div>