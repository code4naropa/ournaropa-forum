<div class="topic z-depth-1">
  <%= render :partial => "ournaropa_forum/conversations/render_author", :locals => {:author => current_user} %>
  
  <div class="content">
    <p class="time right right-align grey-text">
      <i class="material-icons tiny">schedule</i> now
    </p>
    <div class="row">
      <div class="section"></div>
      <%= form_for @conversation, html: {class: "col s12"} do |f| %>
      <% if @conversation.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@conversation.errors.count, "error") %> prohibited this reply from being saved:</h2>

            <ul>
              <% @conversation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">title</i>
            <%= f.text_field :title %>
            <%= f.label :title %>
          </div>
        </div>
        <div class="row">       
          <div class="input-field col s12">
            <i class="material-icons prefix">message</i>
            <%= f.text_area :body, class: "materialize-textarea" %>
            <%= f.label :body, "Message" %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 right-align">
            <button class="btn waves-effect waves-light" type="submit" name="action">
              start conversation
            </button>          
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>