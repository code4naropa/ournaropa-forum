<div class="container">
  <div class="row">
    <div class="col s12">
      <h1>Your Profile</h1>  
    </div>
  </div>
  
  <div class="row">
    <div class="col s12">
      <%= link_to new_password_path, class: "btn waves-effect waves-light" do %>
        <i class="material-icons left">vpn_key</i> Change Password
      <% end %>
    </div>
  </div>
  
  <div class="section"></div>
  
  <div class="row">
  
  <%= form_for(@user.info, url: update_profile_path, class: "col s12") do |f| %>
    <% if @user.info.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user_info.errors.count, "error") %> prohibited this user_info from being saved:</h2>

        <ul>
        <% @user_info.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">face</i>
        <%= f.text_field :first_name %>
        <%= f.label :first_name %>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">star</i>
        <%= f.text_field :last_name %>
        <%= f.label :last_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">location_city</i>
        <%= f.text_field :hometown %>
        <%= f.label :hometown %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">school</i>
        <%= f.text_field :major %>
        <%= f.label :major %>
      </div>
    </div>
    
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">today</i>
        <%= f.text_field :age %>
        <%= f.label :age %>
      </div>
    </div>
    
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">mode_edit</i>
        <%= f.text_area :description, class: "materialize-textarea" %>
        <%= f.label :description, "About Me" %>
      </div>
    </div>
    
        
    <div class="row">
      <div class="col s12 right-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <i class="material-icons right">done</i> Save
        </button>
      </div>
    </div>
    
  <% end %>
  </div>
  
</div>
