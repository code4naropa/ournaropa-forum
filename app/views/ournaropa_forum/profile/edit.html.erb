<div class="container">
  
  <div class="row">
    <div class="col s12">

      <h1>Settings</h1>

      <div class="row">
        <div class="col s12">
          <%= link_to new_password_path, class: "btn waves-effect waves-light" do %>
            <i class="material-icons left">vpn_key</i> Change Password
          <% end %>
        </div>    
      </div>
      
      <div class="row">
        <div class="col s12">
          <%= link_to manage_email_notifications_path, class: "btn waves-effect waves-light" do %>
            <i class="material-icons left">notifications</i> Manage Notifications
          <% end %>
        </div>
      </div>
      
    </div>
  </div>  
  
  
  <div class="row">
    <div class="col s12">
      <h1>Your Profile</h1>  
    </div>
  </div>
    
  <div class="row">
  
  <%= form_for(@user.info, url: update_profile_path, html: { multipart: true }, class: "col s12") do |f| %>
    <% if @user.info.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.info.errors.count, "error") %>:</h2>
        <ul>
        <% @user.info.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
        
    <div class="row">
      
      
      <div class="col s12 m6 l4 offset-l1">
        
        <div class="row">
          <div class="col s12 center-align">
            <%= image_tag @user.info.avatar.url(:large), class: "responsive-img circle" %>
          </div>
        </div>

  
        <div class="row">
           <div class="file-field input-field col s12">
            <div class="btn">
              <span>Photo</span>
              <input type="hidden" name="MAX_FILE_SIZE" value="<%= 1024 * 1024 * 2 %>" /> 
              <%= f.file_field :avatar %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path" type="text">
            </div>
          </div>
        </div>
          
      </div>      
      
      <div class="col s12 m6 l6 offset-l1">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">face</i>
            <%= f.text_field :first_name %>
            <%= f.label :first_name %>
          </div>
        </div>
        
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">star</i>
            <%= f.text_field :last_name %>
            <%= f.label :last_name %>
          </div>
        </div>
          
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.text_field :email, :disabled => "disabled" %>
            <%= f.label :email %>
          </div>
        </div>
        
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.check_box :share_email %>
            <%= f.label :share_email %>
          </div>
        </div>
        
        
      </div>
      
    </div>
      
    
    <div class="row">
      
      <div class="col s12 m12 l12">
        
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">location_city</i>
            <%= f.text_field :hometown %>
            <%= f.label :hometown %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">school</i>
            <%= f.text_field :major %>
            <%= f.label :major %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">today</i>
            <%= f.text_field :age %>
            <%= f.label :age %>
          </div>
        </div>
        
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
            <%= f.text_area :description, class: "materialize-textarea" %>
            <%= f.label :description, "About Me" %>
          </div>
        </div> 
      </div>
    </div>    
        
    <div class="row">
      <div class="col s12 right-align">
        <button class="btn-large waves-effect waves-light" type="submit" name="action">
          <i class="material-icons right">done</i> Save
        </button>
      </div>
    </div>
    
  <% end %>
  </div>
  
</div>
