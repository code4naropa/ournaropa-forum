<div id="ournaropa_forum_registrations_new" class="container">

  <h1>Welcome!</h1>
  <p>Please enter your email address below and we will get you started.</p>

  
  <div class="row">
    <%= form_tag verify_email_path, :class => "col s12" do %>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <%= email_field_tag :email, params[:email] %>
          <%= label_tag(:email, "Email Address") %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 right-align">
  
          <button class="btn-large waves-effect waves-light" type="submit" name="action">
            <i class="material-icons right">send</i> Verify
          </button>

        </div>
      </div>
    <% end %>
  </div>
  
</div>