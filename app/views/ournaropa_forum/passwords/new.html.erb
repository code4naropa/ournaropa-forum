<div class="container">
  
  <h1>Change Password</h1>
  <p>Choose a new password and enter it below. Please also enter your current password for security purposes.</p>
  
  <div class="row">
    <%= form_tag update_password_path, class: "col s12" do %>

      <p><strong>Current Password</strong></p>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">https</i>
          <%= password_field_tag :current_password %>
          <%= label_tag :current_password %>
        </div>
      </div>   
    
      <p><strong>New Password</strong></p>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">vpn_key</i>
          <%= password_field_tag :password %>
          <%= label_tag :password %>
        </div>
      </div>
    
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">check_circle</i>
          <%= password_field_tag :password_confirmation %>
          <%= label_tag :password_confirmation, "Confirm your new password (type it again)" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col s12 right-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <i class="material-icons right">done</i> Update Password
          </button>
        </div>
      </div>
        
    <% end %>
  </div>

</div>

