<p id="notice"><%= notice %></p>

<h1>Listing Replies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Conversation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.title %></td>
        <td><%= reply.body %></td>
        <td><%= reply.author_id %></td>
        <td><%= reply.conversation %></td>
        <td><%= link_to 'Show', [@conversation, reply] %></td>
        <td><%= link_to 'Edit', edit_conversation_reply_path(@conversation, reply) %></td>
        <td><%= link_to 'Destroy', [@conversation, reply], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

