 <%= render :partial => "ournaropa_forum/conversations/render_author", :locals => {:author => current_user} %>

<div class="reply z-depth-1">
  
  <div class="content">
    <p class="time right right-align grey-text">
      <i class="material-icons tiny">schedule</i> now
    </p>
    <h4>Add A Reply</h4>
    <div class="row">
      <div class="section"></div>
      <%= form_for [@conversation, @reply], html: {class: "col s12"} do |f| %>
        <% if @reply.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

            <ul>
            <% @reply.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <!--<div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">title</i>
            <%= f.text_field :title %>
            <%= f.label :title %>
          </div>
        </div>-->
        <div class="row">       
          <div class="input-field col s12">
            <i class="material-icons prefix">message</i>
            <%= f.text_area :body, class: "materialize-textarea" %>
            <%= f.label :body, "Reply" %>
          </div>
        </div>
        <div class="row">
          <div class="col s12 right-align">
            <button class="btn waves-effect waves-light" type="submit" name="action">
              <i class="material-icons right">check</i> reply
            </button>          
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>